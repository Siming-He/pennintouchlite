<h1> Log In </h1>

<% if flash.now[:notice] %>
<div class="alert alert-danger" role="alert">
  <%= flash.now[:notice] %>
</div>
<% end %>

<%= form_with url: '/login' do |form| %>
	<%= form.label :PennKey %>
  <br>
	<%= form.text_field :PennKey %>
  <br>
  <br>
  <%= form.label :Password %>
  <br>
	<%= form.password_field :Password %>
  <br>
  <br>
	<%= form.submit :Login %>
<% end %>